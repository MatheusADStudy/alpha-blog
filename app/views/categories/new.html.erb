<h1 align="center">Create new Category</h1>

<div class="signup">
  <%= render 'shared/errors', obj: @category %>
  <!--  -->
  <div class="row">
    <div class="col-sm-12">
      <%= form_for @category do |f| %>
      <div class="col-sm-12 form-sign">
        <div class="row first">
          <div class="control-label form-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: "true" %>
          </div>
        </div>
        <div class="row last">
          <div class="col-sm-offset-2 submit-btn pt-01 col-sm-2">
            <%= f.submit class: "btn btn-primary btn-lg" %>
          </div>
          <div class=" back-btn col-sm-offset-5 col-sm-2">
            <%= link_to "Back to articles", articles_path, class: "btn
            btn-primary btn-lg link-back"%>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
