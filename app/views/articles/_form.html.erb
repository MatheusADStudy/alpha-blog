<%= render 'shared/errors', obj: @article %>

<!--  -->
<div class="row">
  <div class="col-sm-12">
    <%= form_for @article do |f| %>
    <div class="col-sm-12">
      <div class="row first">
        <div class="control-label form-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-9">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: "true" %>
        </div>
      </div>
      <div class="row second">
        <div class="control-label form-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-9">
          <%= f.text_area :description, rows: 20, class: "form-control",
          placeholder: "Description of article", autofocus: "true" %>
        </div>
      </div>

      <div class="row last">
        <div class="col-sm-offset-2 submit-btn pt-01 col-sm-2">
          <%= f.submit "Create article", class: "btn btn-primary btn-lg" %>
        </div>
        <div class=" back-btn col-sm-offset-4  col-sm-2">
          <%= link_to "Back to articles", articles_path, class: "btn btn-primary
          btn-lg link-back"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
